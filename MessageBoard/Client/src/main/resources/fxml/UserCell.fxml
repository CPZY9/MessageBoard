<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.controlsfx.glyphfont.Glyph?>


<BorderPane maxHeight="20.0" minHeight="20.0" prefHeight="20.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.htwsaar.wirth.client.controller.UserCellController">
   <right>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnDeleteUser" mnemonicParsing="false" text="" AnchorPane.rightAnchor="0.0">
             	<graphic>
       		<Glyph fontFamily="FontAwesome" icon="TIMES" styleClass="btnDeleteUser-glyph" />
       		</graphic>
            </Button>
         </children>
      </AnchorPane>
   </right>
   <left>
      <HBox alignment="CENTER_LEFT" maxHeight="20.0" maxWidth="-Infinity" minHeight="20.0" minWidth="-Infinity" prefHeight="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblStatus">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="lblUsername" textFill="WHITE">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </left>
</BorderPane>
